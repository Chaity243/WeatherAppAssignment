<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlue</item>
        <!--for toolbar back arrow color-->
        <item name="colorControlNormal">@color/colorBlue</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.Widget"/>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>


    <!--Text styles-->

    <!--Regular-->

    <style name="MSTextRegular">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/colorTextPrimary2</item>
    </style>

    <style name="MSLarge" parent="MSTextRegular">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MSHeader" parent="MSTextRegular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MSSubHeader" parent="MSTextRegular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MSCommon" parent="MSTextRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MSSmall" parent="MSTextRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MSExtraSmall" parent="MSTextRegular">
        <item name="android:textSize">10sp</item>
    </style>

    <!--End Of Regular-->

    <!--Bold-->

    <style name="MSTextBold">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textColor">@color/colorTextPrimary2</item>
    </style>

    <style name="MSLargeBold" parent="MSTextBold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MSHeaderBold" parent="MSTextBold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MSSubHeaderBold" parent="MSTextBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MSCommonBold" parent="MSTextBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MSSmallBold" parent="MSTextBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MSExtraSmallBold" parent="MSTextBold">
        <item name="android:textSize">10sp</item>
    </style>
    <!--End Of Bold-->

    <!--Italic-->
    <style name="MSTextItalic">
        <item name="fontPath">fonts/Roboto-Italic.ttf</item>
        <item name="android:textColor">@color/colorTextPrimary2</item>
    </style>

    <style name="MSLargeItalic" parent="MSTextItalic">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MSHeaderItalic" parent="MSTextItalic">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MSSubHeaderItalic" parent="MSTextItalic">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MSCommonItalic" parent="MSTextItalic">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MSSmallItalic" parent="MSTextItalic">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MSExtraSmallItalic" parent="MSTextItalic">
        <item name="android:textSize">10sp</item>
    </style>

    <!--End Of Regular-->

    <!--End of text style-->


    <!--Button Style-->
    <style name="MSButton">
        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/colorPrimary2</item>
        <item name="android:textAllCaps">false</item>
        <!--<item name="android:background">@drawable/selector_rect_white</item>-->
        <item name="android:padding">15dp</item>
        <item name="android:ems">6</item>
    </style>
    <!--End of Button style-->


    <style name="TextBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/smallFontSize</item>
        <item name="android:textColor">@color/colorTextPrimary1</item>
    </style>
    <style name="TextLabelBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/smallFontSize</item>
        <item name="android:textColor">@color/colorTextPrimary1</item>
    </style>


    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="TextBigUpperBlueBold">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>


    <style name="ButtonBigUpperBlueBold">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/submit_button_selector</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="TextBigBlueBold">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>


    <style name="TextBigUpperBold">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="Toolbar">
        <item name="android:background">#303F9F</item>
    </style>


    <style name="AppThemeNoTitle" parent="Theme.AppCompat.Light.NoActionBar">


        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- calender range styles -->
    <style name="WeekDayTitleStyle">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:textSize">@dimen/text_size_week</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/date_color</item>
        <item name="android:paddingBottom">@dimen/dayOfMonthPaddingBottom</item>
    </style>

    <style name="DayOfMonthStyle">
        <item name="android:layout_width">@dimen/dayOfMonthSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthSize</item>
        <item name="android:textSize">@dimen/text_size_date</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/dayOfMonthMinHeight</item>
        <item name="android:minWidth">@dimen/dayOfMonthMinWidth</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingBottom">@dimen/dayOfMonthPaddingBottom</item>
        <item name="android:textColor">@color/default_date_color</item>
    </style>

    <style name="ContainerDayOfWeek">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="StripRange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/strip_height</item>
        <item name="android:background">@color/range_bg_color</item>
        <item name="android:layout_centerVertical">true</item>


    </style>
</resources>
