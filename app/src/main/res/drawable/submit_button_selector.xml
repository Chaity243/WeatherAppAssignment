<?xml version="1.0" encoding="utf-8"?>
<ripple
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="#DDDDDD">

<item>
<selector>
    <item android:state_enabled="false">
        <shape>
            <solid
                    android:color="#c5c5c5" />

            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid
                    android:color="#01458e" />

            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />

        </shape>
    </item>

</selector>
</item>
</ripple>


