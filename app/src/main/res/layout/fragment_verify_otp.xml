<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             >
    <!--<include layout="@layout/registration_toolbar"/>-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
            android:text="Log in using the OTP sent to"
            android:layout_width="250dp"
            android:gravity="center"
            android:textColor="@color/colorPureBlack"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
        <TextView
                android:text="+91"
                android:layout_width="250dp"
                android:gravity="center"
                android:textColor="@color/colorPureBlack"
                android:layout_height="wrap_content"
                android:id="@+id/labelMobile"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="2dp"/>
        <TextView
                android:text="OTP"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/labelOtp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.606"
                app:layout_constraintTop_toBottomOf="@+id/labelMobile"
                android:layout_marginTop="40dp"/>


        <com.msil.sharedmobility.subscribe.presentation.customcontrol.OtpControl.OtpView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/otpControl"
                android:inputType="number"
                android:text=""
                android:hint="...."
                app:itemWidth="40dp"
                app:itemSpacing="20dp"
                app:lineColor="@color/cardview_shadow_start_color"
                app:viewType="line"
                style="@style/OtpWidget.OtpView"
                app:itemCount="4"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/labelOtp"/>
        <TextView
                android:text="resend OTP"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resendOtpLabel"
                android:textColor="@color/colorBlue"
                app:layout_constraintStart_toStartOf="@+id/otpControl"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/otpControl"/>
        <TextView
                android:text="Get OTP over call"
                android:textSize="14sp"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/otpOverCallLabel"
                android:textColor="@color/colorBlue"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/otpControl"
                app:layout_constraintEnd_toEndOf="@+id/otpControl"
                android:layout_marginEnd="0dp"/>
        <TextView
                android:text="(00:60)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/otherText"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/resendOtpLabel"
                app:layout_constraintTop_toBottomOf="@+id/resendOtpLabel"
                app:layout_constraintEnd_toEndOf="@+id/resendOtpLabel"/>
        <TextView
                android:text=""
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/errorText"
                app:layout_constraintBottom_toTopOf="@+id/verifyOtpButton"
                android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="@+id/verifyOtpButton"
                app:layout_constraintStart_toStartOf="@+id/verifyOtpButton" android:layout_marginStart="8dp"/>


        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="VERIFY OTP"
                android:enabled="false"
                android:id="@+id/verifyOtpButton"
                android:background="@drawable/submit_button_selector"
                android:textColor="@drawable/button_text_color"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>