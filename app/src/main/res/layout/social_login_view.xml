<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/rl_media_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_below="@+id/tv_login">
        <ImageView
                android:id="@+id/iv_google_sign_in"
                android:layout_width="@dimen/seperator_height"
                android:layout_height="@dimen/seperator_height"
                android:layout_toLeftOf="@+id/id_sep"
                android:src="@drawable/ic_logo_facebook"/>

        <View
                android:id="@+id/id_sep"
                android:layout_width="2dp"
                android:background="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_height="@dimen/seperator_height"/>

        <ImageView
                android:id="@+id/iv_fb_sign_in"
                android:layout_width="@dimen/seperator_height"
                android:layout_height="@dimen/seperator_height"
                android:layout_toRightOf="@+id/id_sep"
                android:src="@drawable/ic_logo_google"/>



    </RelativeLayout>

</RelativeLayout>